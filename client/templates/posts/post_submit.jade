template(name="postSubmit")
  form#submitPost.main.form
    h3.control-label(for="username") Your are {{ user.username }}
    div.form-group(class="{{ errorClass 'url'}}")
      label.control-label(for="url") URL
      div.controls
        input#url.form-control(name="url", type="text", value="", placeholder="Your URL")
        span.help-block {{errorMessage "url"}}
    div.form-group(class="{{ errorClass 'title'}}")
      label.control-label(for="title") Title
      div.controls
        input#titile.form-control(name="title", type="text", value="" placeholder="Name your post")
        span.help-block {{errorMessage 'title'}}
    input.btn.btn-primary(type="submit", value="Submit")
